
"" -- Map IDE actions to IdeaVim -- https://jb.gg/abva4t
"" Map \r to the Reformat Code action

"" Map <leader>d to start debug
"map <leader>d <Action>(Debug)

"" Map \b to toggle the breakpoint on the current line
"map \b <Action>(ToggleLineBreakpoint)


" Find more examples here: https://jb.gg/share-ideavimrc

inoremap jk <Esc>
inoremap kj <Esc>


set number relativenumber
set idearefactormode=keep
set ideajoin
set surround
set easymotion
set ignorecase
set smartcase
set autoindent
"set textwidth = 79
set textwrap = 80

set timeoutlen = 150
set which-key
let g:WhichKey_ShowVimActions = "true"
let g:WhichKey_DefaultDelay = 0


let mapleader = " "

# noremap <Esc> <nop>
nmap <S-Enter> O<Esc>
nmap <CR> o<Esc>

nnoremap <C-j> :m +1<CR>
nnoremap <C-k> :m -2<CR>
inoremap <C-j> <Esc>:m +1<CR>gi
inoremap <C-k> <Esc>:m -2<CR>gi
" scrolling
nmap <leader>d <C-d>
nmap <leader>u <C-u>
vmap <leader>d <C-d>
vmap <leader>u <C-u>

" actions
nmap <Tab>          <action>(NextTab)
nmap <S-Tab>        <action>(PreviousTab)
nmap <leader>a      <action>(Run)
nmap <leader>b      <action>(CloseEditor)
nmap <leader>c      <action>(CloseAllEditorsButActive)
nmap <leader>e      <action>(ActivateProjectToolWindow)
nmap <leader>g      <action>(GotoNextError)
nmap <leader>h      <action>(HideActiveWindow)
nmap <leader>i      <action>(Generate)
nmap <leader>l      <action>(ShowErrorDescription)
nmap <leader>m      <action>(Git.Menu)
nmap <leader>n      <action>(NewClass)
nmap <leader>o      <action>(OptimizeImports)
nmap <leader>o      <action>(OptimizeImports)
nmap <leader>q      <action>(Stop)
nmap <leader>r      <action>(ReformatCode)
nmap <leader>s      <action>(QuickChangeScheme)

set NERDTree
map <c-p> :NERDTree<CR>
let g:NERDTreeMapActivateNode='l'
let g:NERDTreeMapJumpParent='h'


# Moving Text
vnoremap J :m '>+1<CR>gv = gv
vnoremap K :m '<-2<CR>gv = gv
inoremap <C-k> <esc>:m .-2<CR>==
inoremap <C-j> <esc>:m .+1<CR>==
nnoremap <leader>k :m .-2<CR>==
nnoremap <leader>j :m .+1<CR>==


Plug 'tpope/vim-surround'
Plug 'easymotion/vim-easymotion'
map f <Plug>(easymotion-bd-f)
map ; <Plug>(easymotion-s)